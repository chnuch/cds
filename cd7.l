%{
#include <stdio.h>
#include <string.h>
#include "icg.tab.h"  // generated by Bison
struct symtab *install_id(char *s);
%}

l  [A-Za-z]
d  [0-9]
id {l}({l}|{d})*
num {d}+(\.{d}+)?

%%

{id}    { yylval.p = install_id(yytext); return id; }
{num}   { yylval.v = strdup(yytext); return num; }
[-+*/^=;] { return yytext[0]; }
.|\n    { /* ignore other characters */ }

%%

int yywrap() {
    return 1;
}
